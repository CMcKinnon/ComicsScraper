@using ComicsScraper.Constants;
@{
    ViewData["Title"] = "Home Page";
    var comics = ComicDefinitions.SortedComics;
    int numberOfComics = comics.Count;
}

<div class="row">
@for(int i=0; i<numberOfComics; i++)
{
    if (i > 0 && i % 2 == 0)
    {
        @:</div><div class="row">
    }
    <div class="column">
        <span class="comic-name">@comics[i].FullName</span>
        <img src="/api/comics/@(comics[i].Name)"/>
    </div>
}
</div>
