@model IList<ComicDefinition>
@{
    ViewData["Title"] = "Home Page";
    int numberOfComics = Model.Count;
}

<div class="row">
    @for (int i = 0; i < numberOfComics; i++)
    {
        if (i > 0 && i % 2 == 0)
        {
        @:</div><div class="row">
        }
        <div class="column">
            <span class="comic-name">@Model[i].FullName</span>
            <img src="/comics/api/comics/@(Model[i].Name)" onerror="imageErrorHandler.call(this, event);"/>
        </div>
    }
</div>
